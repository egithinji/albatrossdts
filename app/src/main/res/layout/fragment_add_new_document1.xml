<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".AddNewDocument1">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="199dp"
                    android:layout_height="31dp"
                    android:text="Add New Document"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.18" />

                <TextView
                    android:id="@+id/txtDocumentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="36dp"
                    android:text="Document Title:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <EditText
                    android:id="@+id/txtEditDocumentTitle"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/txtDocumentTitle"
                    app:layout_constraintTop_toBottomOf="@+id/txtDocumentTitle"
                    android:background="@drawable/edit_text_normal"
                    />

                <TextView
                    android:id="@+id/txtDocumentDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="36dp"
                    android:text="Document Description:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtEditDocumentTitle" />

                <EditText
                    android:id="@+id/txtEditDocumentDescription"
                    android:layout_width="285dp"
                    android:layout_height="47dp"
                    app:layout_constraintStart_toStartOf="@+id/txtDocumentDescription"
                    app:layout_constraintTop_toBottomOf="@+id/txtDocumentDescription"
                    android:background="@drawable/edit_text_normal"/>

                <TextView
                    android:id="@+id/txtPermanentLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="36dp"
                    android:text="Permanent Storage Location:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtEditDocumentDescription"
                    />

                <Spinner
                    android:id="@+id/spinnerPermanentLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtPermanentLocation"
                    />

                <Button
                    android:id="@+id/btnNext1AddNew"
                    android:layout_width="121dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="45dp"
                    android:background="@drawable/button_selector"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:text="NEXT"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinnerPermanentLocation"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

