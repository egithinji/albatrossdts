<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="africa.albatross.albatrossdts.DocumentsPerEmployee1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:text="Items per Employee Report"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:fontFamily="@font/montserratregular"
        />

    <TextView
        android:id="@+id/txtEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Specify employee: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:fontFamily="@font/montserratlight"/>

    <Spinner
        android:id="@+id/spinnerEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtEmployee"
        android:fontFamily="@font/montserratlight"/>

    <!-- The below textview and edittext are only for the demo version of the app -->

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email address to send the report to:"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/montserratlight"
        app:layout_constraintTop_toBottomOf="@+id/spinnerEmployee"
        android:id="@+id/txtEmail"
        />

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/editTextEnterEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/montserratlight"
        />

    <Button
        android:id="@+id/btnGenerateDocumentsPerEmployeeReport"
        android:layout_width="142dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_selector"
        android:text="Generate Report"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEnterEmail"
        android:fontFamily="@font/montserratlight"/>

    <ProgressBar
        android:id="@+id/determinateBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:progress="0"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGenerateDocumentsPerEmployeeReport"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Generating report..."
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/determinateBar"
        android:fontFamily="@font/montserratlight"/>

</androidx.constraintlayout.widget.ConstraintLayout>