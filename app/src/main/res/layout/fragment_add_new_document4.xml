<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".AddNewDocument4">

        <TextView
            android:id="@+id/textView"
            android:layout_width="240dp"
            android:layout_height="31dp"
            android:text="Add New Item"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18"
            android:fontFamily="@font/montserratregular"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txtReview"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:text="Summary"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:fontFamily="@font/montserratlight"/>

        <ImageView
            android:id="@+id/imgSummaryDocumentPhoto"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtReview" />

        <TextView
            android:id="@+id/txtSummaryDocumentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="Item Name: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgSummaryDocumentPhoto"
            app:layout_constraintVertical_bias="0.041"
            android:fontFamily="@font/montserratlight"/>

        <TextView
            android:id="@+id/txtSummaryDocumentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Description: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="@id/txtSummaryDocumentTitle"
            app:layout_constraintTop_toBottomOf="@id/txtSummaryDocumentTitle"
            app:layout_constraintVertical_bias="0.25"
            android:fontFamily="@font/montserratlight"/>

        <TextView
            android:id="@+id/txtSummaryDocumentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permanent Storage Location: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="@id/txtSummaryDocumentTitle"
            app:layout_constraintTop_toBottomOf="@id/txtSummaryDocumentDescription"
            app:layout_constraintVertical_bias="0.25"
            android:fontFamily="@font/montserratlight"/>

        <TextView
            android:id="@+id/txtSummaryBarcodeNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barcode number: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toLeftOf="@id/txtSummaryDocumentTitle"
            app:layout_constraintTop_toBottomOf="@id/txtSummaryDocumentLocation"
            app:layout_constraintVertical_bias="0.25"
            android:fontFamily="@font/montserratlight"/>

        <Button
            android:id="@+id/btnBack4AddNew"
            android:layout_width="121dp"
            android:layout_height="52dp"
            android:background="@drawable/button_selector"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="BACK"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.594"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btnSubmitAddNew"
            app:layout_constraintTop_toTopOf="@+id/btnSubmitAddNew"
            android:fontFamily="@font/montserratlight"/>

        <Button
            android:id="@+id/btnSubmitAddNew"
            android:layout_width="121dp"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_selector"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="SUBMIT"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias=".8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSummaryBarcodeNumber"
            android:fontFamily="@font/montserratlight"/>

        <ProgressBar
            android:id="@+id/progressBarSummary"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>